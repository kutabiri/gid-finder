<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:requiresFadingEdge="vertical"
    android:fadingEdgeLength="30dp">

    <RelativeLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/gid_section"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:textStyle="bold"
                android:textSize="35sp"
                android:gravity="center"
                android:text="@string/initial_message" />

        </LinearLayout>

        <!-- compass -->
        <ImageView
            android:id="@+id/map_section"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/compass_bg"
            android:layout_below="@id/gid_section"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/marker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/marker"
            android:layout_alignTop="@id/map_section"
            android:layout_alignLeft="@id/map_section"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/compass"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/map_section"
            android:layout_alignTop="@id/map_section"
            android:src="@drawable/compass"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/map_section"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_1"
                        style="@style/cell_text"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_2"
                        style="@style/cell_text"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_3"
                        style="@style/cell_text"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_4"
                        style="@style/cell_text"/>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_5"
                        style="@style/cell_text"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_6"
                        style="@style/cell_text"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_7"
                        style="@style/cell_text"/>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_8"
                        style="@style/cell_text"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>

                    <TextView
                        android:id="@+id/cell_9"
                        style="@style/cell_text"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/qed_logo"
                android:scaleType="fitEnd"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>